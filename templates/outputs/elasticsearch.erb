  elasticsearch:
    enabled: true
    hosts: <%= @hosts.to_json %>
    save_topology: <%= @save_topology %>
<% if @es_protocol %>
    # Protocol and auth credentials
    es_protocol: <%= @es_protocol %>
<% end -%>
<% if @es_username %>
    es_username: <%= @es_username %>
<% end -%>
<% if @es_password %>
    es_password: <%= @es_password %>
<% end -%>
<% if @es_index %>
    # Custom index location
    es_index: <%= @es_index %>
<% end %>
<% if @es_http_path %>
    # Custom HTTP path to ES
    path: <%= @es_http_path %>
<% end %>

